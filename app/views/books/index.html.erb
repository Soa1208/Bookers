<h1>Books</h1>


<% @books.each do |book| %>

  <p>Title</p>
  <span><%= link_to book.title, book_path(book.id) %></span>
  
  <p>Body</p>
  <span><%= book.body %></span>
  
  <%= link_to "Show", book_path(book) %>
  <%= link_to "Edit", edit_book_path(book) %>
  <%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %>
  
<% end %>



<h2>New book</h2>
<%= form_with model: Book.new do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>
  
  <p>Body</p>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
  
<% end %>